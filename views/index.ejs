<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Rendering the variable in EJS -->
    <title>
        <%= locals.title %>
        <!-- <%= title %> -->
    </title>
</head>
<body>
    <h1>Contact List</h1>
    <div class="contacts">
        <ul>
            <% for (let i of contact_list) { %>
                <li>
                    <p><strong><%= i.name %></strong>: <%= i.phone %></p>
                </li>
            <% } %>
        </ul>
    </div>

    <form action="/create-contact" method="post">
        <input type="text" name="name" id="name" placeholder="Enter Name" required />
        <input type="tel" name="phone" id="phone" placeholder="Enter Phone" required />
        <input type="submit" value="Add Contact">
    </form>
</body>
</html>